<Window x:Class="RadioWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioWPF"
        mc:Ignorable="d"
        Title="LKRadio" Height="450" Width="800">
    
    <Grid>

        <!--Body-->
        <Grid Margin="0,0,0,0" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>

        <Button x:Name="BtnOn" Tag="btnON" Content="Turn On" HorizontalAlignment="Left" Margin="611,95,0,0" VerticalAlignment="Top" Click="btnOnHandler"/>
        <Button x:Name="BtnOff" Tag="btnOff" Content="Turn Off" HorizontalAlignment="Left" Margin="611,262,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Content="Channel" HorizontalAlignment="Left" Margin="136,191,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
